<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="61.0" minWidth="256.0" prefHeight="357.0" prefWidth="532.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.ics.oop.presenter.SimulationConfigurationPresenter">
    <top>
        <HBox prefHeight="147.0" prefWidth="526.0" BorderPane.alignment="CENTER">
            <VBox prefHeight="92.0" prefWidth="491.0" BorderPane.alignment="CENTER">
                <Label fx:id="informationLabel" text="Please enter move directions" />
                <TextField fx:id="argsInput" prefHeight="25.0" prefWidth="233.0" />
                <ComboBox fx:id="mapSelector" onAction="#onItemSelected" value="GrassField">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="GrassField" />
                            <String fx:value="RectangularMap" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Pane fx:id="propertiesPane" prefHeight="56.0" prefWidth="304.0">
                </Pane>
                <HBox>
                    <Button mnemonicParsing="false" onAction="#onAddAnimalClicked" text="Add Animal" />
                    <Button mnemonicParsing="false" onAction="#onRemoveAnimalClicked" text="Remove Animal" />
                </HBox>
            </VBox>
            <Button alignment="CENTER" layoutX="81.0" layoutY="14.0" mnemonicParsing="false" onAction="#onSimulationStartClicked" text="Start" />
        </HBox>
    </top>
    <bottom>
    </bottom>
   <left>
   </left>
   <center>
       <ListView fx:id="animalsList" prefHeight="400.0" prefWidth="514.0"/>
   </center>
</BorderPane>
