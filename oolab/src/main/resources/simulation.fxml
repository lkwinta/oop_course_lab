<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="550.0" minWidth="850.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.ics.oop.presenter.SimulationPresenter">
   <top>
       <VBox prefHeight="25.0" prefWidth="850.0" BorderPane.alignment="CENTER">
           <TextField fx:id="argsInput" />
           <Label fx:id="moveInformation" text="Please enter move directions" />
       </VBox>
   </top>
   <bottom>
       <VBox prefHeight="11.0" prefWidth="850.0" BorderPane.alignment="CENTER">
           <Button mnemonicParsing="false" onAction="#onSimulationStartClicked" text="Start" />
       </VBox>
   </bottom>
   <center>
      <GridPane fx:id="mapGridPane" alignment="CENTER" gridLinesVisible="true" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints minWidth="30.0" prefWidth="30.0" />
          <ColumnConstraints minWidth="30.0" prefWidth="30.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="30.0" prefHeight="30.0" />
          <RowConstraints minHeight="30.0" prefHeight="30.0" />
          <RowConstraints minHeight="30.0" prefHeight="30.0" />
        </rowConstraints>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </GridPane>
   </center>

</BorderPane>
